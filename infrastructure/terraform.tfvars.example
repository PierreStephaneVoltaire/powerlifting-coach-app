# AWS Configuration
aws_region = "ca-central-1"

# Project Configuration
project_name = "nolift"
environment  = "dev"

# Control Plane Configuration
control_plane_instance_type = "t3a.small"  # Cheapest spot instance type
control_plane_volume_size   = 30           # GB

# Worker Configuration
worker_instance_type    = "t3a.small"  # Cheapest spot instance type
worker_volume_size      = 30           # GB
worker_desired_capacity = 2            # Default number of workers
worker_min_size         = 1            # Minimum workers for auto-scaling
worker_max_size         = 5            # Maximum workers for auto-scaling

# Kubernetes Configuration
max_pods_per_node = 110                # Maximum pods per worker node
pod_network_cidr  = "10.42.0.0/16"     # Pod network CIDR

# DNS Configuration
domain_name = "nolift.training"

# Feature Flags
# IMPORTANT: Set to false for first apply, then true for second apply
kubernetes_resources_enabled = false

# ArgoCD resources (set to true after ArgoCD is deployed)
argocd_resources_enabled = false

# Cost savings: set to true to scale workers to 0 (control plane remains running)
stopped = false

# OAuth Configuration (if needed)
google_oauth_client_id     = ""  # Optional
google_oauth_client_secret = ""  # Optional

# OpenAI Configuration (if needed)
openai_api_key   = ""  # Optional
litellm_endpoint = "https://api.openai.com/v1"  # Optional
