# Domain Configuration
domain_name = "nolift.training"

# Azure Configuration
azure_subscription_id = "your-subscription-id-here"  # Required - get from Azure portal

# Project Configuration
project_name = "nolift"
environment  = "dev"

# Azure Region
region = "eastus"

# Kubernetes Configuration
kubernetes_resources_enabled = true
argocd_resources_enabled     = true

# Node Configuration (optional - defaults shown)
# node_size  = "Standard_B2s"
# node_count = 1

# Email Configuration (Azure Communication Services)
# Fill these in after setting up Azure Communication Services
azure_email_smtp_host     = "smtp.azurecomm.net"
azure_email_smtp_username = "your-smtp-username"  # From Azure portal
azure_email_smtp_password = "your-smtp-password"  # From Azure portal
azure_email_from_email    = "noreply@nolift.training"

# Email Domain Verification (get these from Azure portal after adding custom domain)
azure_email_domain_verification_code = "MS=ms12345678"  # Replace with your code
azure_email_dkim_selector1          = "selector1._domainkey"
azure_email_dkim_value1             = "v=DKIM1; k=rsa; p=MIG..."  # Replace with your value
azure_email_dkim_selector2          = "selector2._domainkey"
azure_email_dkim_value2             = "v=DKIM1; k=rsa; p=MII..."  # Replace with your value

# Google OAuth Configuration (optional - for social login)
google_oauth_client_id     = "your-client-id.apps.googleusercontent.com"
google_oauth_client_secret = "your-client-secret"

# OpenAI Configuration (optional - for LLM features in OpenWebUI)
# openai_api_key = "sk-..."
# litellm_endpoint = "https://api.openai.com/v1"
